body.delivered
.container
    ul#gn-menu.gn-menu-main
        li.gn-trigger
            a.gn-icon.gn-icon-menu
                span Menu
            nav.gn-menu-wrapper
                .gn-scroller
                    ul.gn-menu
                        li.gn-search-item
